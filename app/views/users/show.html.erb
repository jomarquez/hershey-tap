<div class="hershey-progress">

  <div class="progress">
    <% if @user %>
      <div class="progress-bar" role="progressbar" aria-valuenow=<%= @user.progress %> aria-valuemin="0" aria-valuemax="100" style="width: <%= @user.progress %>%;">
        <%= @user.progress %>%
      </div>
    <% else %>
      <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 100%;">
        <%= form_for User.new do |f| %>
          <%= text_field_tag :twitter_name, nil, placeholder: 'Enter your twitter handle to sign up now!', style: 'width: 100%' %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
